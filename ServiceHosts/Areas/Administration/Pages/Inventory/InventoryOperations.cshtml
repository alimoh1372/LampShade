@using InventoryManagement.ApplicationContracts.InventoryContracts
@model List<InventoryManagement.ApplicationContracts.InventoryContracts.InventoryOperationsViewModel>
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">گردش انبار</h4>
</div>


<div class="modal-body">
    <table id="datatable" class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>تعداد</th>
                <th>تاریخ</th>
                <th>موجودی پس از انجام</th>
                <th>عملگر</th>
                <th>توضیحات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (InventoryOperationsViewModel item in Model)
            {
                <tr class="text-white @(item.Operation ? "bg-success" : "bg-danger")">
                    <th>@item.Id</th>
                    <th>@item.Count</th>
                    <th>@item.OperationDate</th>
                    <th>@item.CurrentCount</th>
                    <th>
                        @if (item.Operation)
                        {
                            <i class="fa fa-2x fa-plus-circle"></i><span>افزایش</span>
                        }
                        else
                        {
                            <i class="fa fa-2x fa-minus-circle"></i><span>کاهش</span>
                        }
                    </th>

                    <th>@item.Description</th>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
</div>






