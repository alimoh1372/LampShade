@page "{id}"


@using _01_LampshadeQuery.Contracts.Comment
@model ServiceHosts.Pages.ProductModel
@{
    ViewData["Title"] = "جزئیات محصول";
}

<!--====================  breadcrumb area ====================-->
<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  breadcrumb wrpapper  =======-->
                <div class="breadcrumb-wrapper breadcrumb-bg" style="background-image: url('/@Model.Product.Picture'); background-size: auto; background-repeat: no-repeat;">
                    <!--=======  breadcrumb content  =======-->
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">@Model.Product.ShortDescription</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="/Index">صفحه ی اصلی</a>
                            </li>
                            <li class="active">@Model.Product.Name</li>
                        </ul>
                    </div>
                    <!--=======  End of breadcrumb content  =======-->
                </div>
                <!--=======  End of breadcrumb wrpapper  =======-->
            </div>
        </div>
    </div>
</div>
<!--====================  End of breadcrumb area  ====================-->
<!--====================  page content area ====================-->
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  page wrapper  =======-->
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <!--=======  single product main content area  =======-->
                        <div class="single-product-main-content-area section-space" style="direction: ltr;">
                            <div class="row" style="display: flex; flex-direction: row-reverse">
                                <div class="col-lg-6">
                                    <!--=======  product details slider area  =======-->

                                    <div class="product-details-slider-area">
                                        <div class="big-image-wrapper">
                                            <div class="product-details-big-image-slider-wrapper product-details-big-image-slider-wrapper--bottom-space ht-slick-slider"
                                                 data-slick-setting='{
                                                "slidesToShow": 1,
                                                "slidesToScroll": 1,
                                                "arrows": false,
                                                "autoplay": false,
                                                "autoplaySpeed": 5000,
                                                "fade": true,
                                                "speed": 500,
                                                "prevArrow": {"buttonClass": "slick-prev", "iconClass": "fa fa-angle-left" },
                                                "nextArrow": {"buttonClass": "slick-next", "iconClass": "fa fa-angle-right" }
                                            }' data-slick-responsive='[
                                                {"breakpoint":1501, "settings": {"slidesToShow": 1, "arrows": false} },
                                                {"breakpoint":1199, "settings": {"slidesToShow": 1, "arrows": false} },
                                                {"breakpoint":991, "settings": {"slidesToShow": 1, "arrows": false, "slidesToScroll": 1} },
                                                {"breakpoint":767, "settings": {"slidesToShow": 1, "arrows": false, "slidesToScroll": 1} },
                                                {"breakpoint":575, "settings": {"slidesToShow": 1, "arrows": false, "slidesToScroll": 1} },
                                                {"breakpoint":479, "settings": {"slidesToShow": 1, "arrows": false, "slidesToScroll": 1} }
                                            ]'>
                                                <div class="single-image">
                                                    <img src="~/@Model.Product.Picture" class="img-fluid"
                                                         alt="@Model.Product.PictureAlt" title="@Model.Product.PictureTitle">
                                                </div>
                                                @foreach (var productPicture in Model.Product.ProductPictures)
                                                {
                                                    <div class="single-image">
                                                        <img src="~/@productPicture.Picture" class="img-fluid"
                                                             alt="@productPicture.PictureAlt" title="@productPicture.PictureTitle">
                                                    </div>
                                                }
                                            </div>
                                        </div>


                                        <div class="product-details-small-image-slider-wrapper product-details-small-image-slider-wrapper--horizontal-space ht-slick-slider"
                                             data-slick-setting='{
                                                "slidesToShow": 4,
                                                "slidesToScroll": 1,
                                                "arrows": true,
                                                "autoplay": false,
                                                "autoplaySpeed": 5000,
                                                "speed": 500,
                                                "asNavFor": ".product-details-big-image-slider-wrapper",
                                                "focusOnSelect": true,
                                                "centerMode": false,
                                                "prevArrow": {"buttonClass": "slick-prev", "iconClass": "fa fa-angle-left" },
                                                "nextArrow": {"buttonClass": "slick-next", "iconClass": "fa fa-angle-right" }
                                            }' data-slick-responsive='[
                                                {"breakpoint":1501, "settings": {"slidesToShow": 3, "arrows": false} },
                                                {"breakpoint":1199, "settings": {"slidesToShow": 3, "arrows": false} },
                                                {"breakpoint":991, "settings": {"slidesToShow": 5, "arrows": false, "slidesToScroll": 1} },
                                                {"breakpoint":767, "settings": {"slidesToShow": 3, "arrows": false, "slidesToScroll": 1} },
                                                {"breakpoint":575, "settings": {"slidesToShow": 3, "arrows": false, "slidesToScroll": 1} },
                                                {"breakpoint":479, "settings": {"slidesToShow": 2, "arrows": false, "slidesToScroll": 1} }
                                            ]'>
                                            <div class="single-image">
                                                <img src="~/@Model.Product.Picture" class="img-fluid"
                                                     alt="@Model.Product.PictureAlt" title="@Model.Product.PictureTitle">
                                            </div>
                                            @foreach (var productPicture in Model.Product.ProductPictures)
                                            {
                                                <div class="single-image">
                                                    <img src="~/@productPicture.Picture" class="img-fluid"
                                                         alt="@productPicture.PictureAlt" title="@productPicture.PictureTitle">
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <!--=======  End of product details slider area  =======-->
                                </div>
                                <div class="col-lg-6">
                                    <!--=======  single product content description  =======-->
                                    <div class="single-product-content-description">
                                        <p class="single-info">
                                            Brands <a asp-page="/ProductCategory" asp-route-id="@Model.Product.CategorySlug">@Model.Product.Category</a>
                                        </p>
                                        <h4 class="product-title">@Model.Product.Name</h4>
                                        <div class="product-rating">
                                            <span class="rating">
                                                <i class="ion-android-star active"></i>
                                                <i class="ion-android-star active"></i>
                                                <i class="ion-android-star active"></i>
                                                <i class="ion-android-star active"></i>
                                                <i class="ion-android-star-outline"></i>
                                            </span>

                                            <span class="review-count">
                                                <a href="#">(2 نظر)</a> | <a href="#">لطفا نظرتان را بنویسید....</a>
                                            </span>
                                        </div>

                                        <p class="single-grid-product__price" style="direction: rtl">
                                            @if (Model.Product.HasDiscount)
                                            {
                                                <span class="discounted-price">@Model.Product.PriceWithDiscount تومان</span>
                                                <span class="main-price discounted">@Model.Product.UnitPrice تومان</span>
                                            }
                                            else
                                            {
                                                <span class="main-price">@Model.Product.UnitPrice</span>
                                            }

                                        </p>

                                        <p class="single-info">کد محصول: <span class="value">@Model.Product.Code</span> </p>
                                        @if (Model.Product.HasDiscount)
                                        {
                                            <p class="single-info">میزان سود شما از این خرید: <span class="value">@Model.Product.DiscountPoint تومان</span> </p>
                                        }
                                        @if (Model.Product.IsInStock)
                                        {
                                            <p class="single-info">
                                                وضعیت موجودی: <span class="value text-success"><i class="fa fa-check-circle"></i> موجود در انبار </span>
                                            </p>
                                            <p class="single-info">
                                                تعداد باقی مانده: <span class="value "> @Model.Product.CurrentCount </span>
                                            </p>
                                        }
                                        else
                                        {
                                            <p class="single-info">
                                                وضعیت موجودی: <span class="value text-danger"><i class="fa fa-remove"></i> اتمام موجودی </span>
                                            </p>
                                        }


                                        <p class="product-description">
                                            @Model.Product.Description
                                        </p>
                                        @if (Model.Product.HasDiscount)
                                        {
                                            <div class="product-countdown" data-countdown="@Model.Product.DiscountExpireDate"></div>
                                        }


                                        <div class="product-actions">
                                            <div class="quantity-selection">
                                                <label>Qty</label>
                                                <input type="number" value="1" min="1">
                                            </div>

                                            <div class="product-buttons">
                                                <a class="cart-btn" href="#">
                                                    <i class="ion-bag"></i>افزودن به سبد خرید
                                                </a>
                                            </div>

                                        </div>

                                        <div class="social-share-buttons mt-20">
                                            <h5>share this product</h5>
                                            <ul>
                                                <li>
                                                    <a class="twitter" href="#">
                                                        <i class="fa fa-twitter"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="facebook" href="#">
                                                        <i class="fa fa-facebook"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="google-plus" href="#">
                                                        <i class="fa fa-google-plus"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="pinterest" href="#">
                                                        <i class="fa fa-pinterest"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <p class="single-info mb-0">
                                            برچسب ها: <a asp-page="/ProductCategory" asp-route-id="@Model.Product.CategorySlug">@Model.Product.Category</a>
                                            , <a href="#">@Model.Product.Name</a>, <a href="#">@Model.Product.Name</a>
                                        </p>


                                    </div>
                                    <!--=======  End of single product content description  =======-->
                                </div>
                            </div>
                        </div>
                        <!--=======  End of single product main content area  =======-->
                        <!--=======  product description review   =======-->

                        <div class="product-description-review-area">
                            <div class="row">
                                <div class="col-lg-12">
                                    <!--=======  product description review container  =======-->

                                    <div class="tab-slider-wrapper product-description-review-container  section-space--inner">
                                        <nav>
                                            <div class="nav nav-tabs justify-content-center" id="nav-tab"
                                                 role="tablist">
                                                <a class="nav-item nav-link active" id="description-tab"
                                                   data-toggle="tab" href="#product-description" role="tab"
                                                   aria-selected="true">توضیحات</a>
                                                <a class="nav-item nav-link" id="review-tab" data-toggle="tab"
                                                   href="#review" role="tab" aria-selected="false">نظرات (@Model.Product.Comments.Count)</a>
                                            </div>
                                        </nav>
                                        <div class="tab-content" id="nav-tabContent">
                                            <div class="tab-pane fade show active" id="product-description"
                                                 role="tabpanel" aria-labelledby="description-tab">
                                                <!--=======  product description  =======-->

                                                <div class="product-description">
                                                    <p>
                                                        @Model.Product.Description
                                                    </p>

                                                </div>

                                                <!--=======  End of product description  =======-->
                                            </div>
                                            <div class="tab-pane fade" id="review" role="tabpanel"
                                                 aria-labelledby="review-tab">
                                                <!--=======  review content  =======-->

                                                <div class="product-rating-wrap">
                                                    <div class="pro-avg-rating">
                                                        <h4>@Model.Product.CommentsAveragePoint <span>(امتیاز کاربران)</span></h4>
                                                        <span> از @Model.Product.Comments.Count امتیاز داده شده</span>
                                                    </div>
                                                    @*<div class="rating-list">
                                                            <div class="sin-list float-right">
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <span>(5)</span>
                                                            </div>
                                                            <div class="sin-list float-right">
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <span>(3)</span>
                                                            </div>
                                                            <div class="sin-list float-right">
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <span>(1)</span>
                                                            </div>
                                                            <div class="sin-list float-right">
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <span>(0)</span>
                                                            </div>
                                                            <div class="sin-list float-right">
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <i class="fa fa-star-o"></i>
                                                                <span>(0)</span>
                                                            </div>
                                                        </div>*@
                                                    <div class="ratings-wrapper">
                                                        @foreach (CommentQueryModel comment in Model.Product.Comments)
                                                        {
                                                            <div class="sin-ratings">
                                                                <div class="rating-author">
                                                                    <h3>@comment.Name</h3>
                                                                    <div class="rating-star">
                                                                        @for (int i = 0; i < 5; i++)
                                                                        {
                                                                            if (i < comment.Point)
                                                                            {
                                                                                <i class="fa fa-star"></i>
                                                                            }
                                                                            else
                                                                            {
                                                                                <i class="fa fa-star-o"></i>
                                                                            }
                                                                        }
                                                                        <span>(@comment.Point)</span>
                                                                    </div>
                                                                </div>
                                                                <p>
                                                                    @comment.Message
                                                                </p>
                                                            </div>
                                                        }

                                                    </div>

                                                    <div class="rating-form-wrapper fix">
                                                        <h3>نظرات خود را با ما در میان بگذارید</h3>
                                                        <form method="post">
                                                            <div class="rating-form row">
                                                                <div class="col-12">
                                                                    <h5>به این محصول امتیاز دهید:</h5>
                                                                    <div class="wrapper-range">
                                                                        <div class="sliderValue">
                                                                            <span id="rangSpan">0</span>
                                                                        </div>

                                                                        <div class="field">

                                                                            <div class="value left">1</div>

                                                                            <input id="point" name="point" type="range" min="1" max="5" value="1" steps="1">
                                                                            <div class="value right">5</div>
                                                                        </div>
                                                                    </div>

                                                                </div>
                                                                <div class="col-md-6 col-12 form-group">
                                                                    <label for="name">نام:</label>
                                                                    <input id="name" name="name" required="required" placeholder="نام خود را وارد نمائید" type="text">
                                                                </div>
                                                                <div class="col-md-6 col-12 form-group">
                                                                    <label for="email">ایمیل:</label>
                                                                    <input id="email" name="email" placeholder="ایمیل خود را وارد نمائید."
                                                                           type="email">
                                                                </div>
                                                                <div class="col-12 form-group">
                                                                    <label for="message">متن :</label>
                                                                    <textarea name="message" id="message"
                                                                              placeholder="نظر خود را در این قسمت وارد نمائید."></textarea>
                                                                </div>
                                                                <input type="hidden" id="fkproductid" name="fkproductid" value="@Model.Product.Id" />
                                                                <input type="hidden" id="slug" name="slug" value="@Model.Product.Slug" />
                                                                <div class="col-12">
                                                                    <input value="ثبت نظر" type="submit">
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>

                                                <!--=======  End of review content  =======-->
                                            </div>
                                        </div>
                                    </div>

                                    <!--=======  End of product description review container  =======-->
                                </div>
                            </div>
                        </div>

                        <!--=======  End of product description review   =======-->

                    </div>
                </div>
                <!--=======  End of page wrapper  =======-->
            </div>
        </div>
    </div>
</div>
<!--====================  End of page content area  ====================-->
@section Scripts{
    <script>
        $(document).ready(function () {
            const slideValue = document.getElementById("rangSpan");
            const inputSlider = document.getElementById("point");

            inputSlider.oninput = (() => {
                let value = inputSlider.value;
                slideValue.textContent = value;
                slideValue.style.left =Number(((value / 5) *100)-25) + "%";
                slideValue.classList.add("show");
               
            });

            inputSlider.onblur = (() => {
                slideValue.classList.remove("show");
            });
        });


    </script>

}
